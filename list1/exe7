import java.util.Scanner;
class Main {  
  public static void main(String args[]) { 
    Scanner input = new Scanner(System.in);
    
    System.out.print("Insira o salario atual: ");
    double sal = input.nextDouble();

    System.out.print("Insira o reajuste salarial: ");
    double reajusteBruto = input.nextDouble();

      double reajusteLiquido = reajusteBruto / 100;
      
   double aumento = reajusteLiquido * sal; 
  
  System.out.println("O novo salario Ã©: "+(aumento+sal));
  }
   }
